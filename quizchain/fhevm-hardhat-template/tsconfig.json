{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./deploy/**/*.ts",
    "./tasks/**/*.ts",
    "./test/**/*.ts",
    "./types/**/*.ts"
  ]
}



